{
    "config": {
        "defaults": {
            "api_call": {
                "request": {
                    "base_url": "http://127.0.0.1:3000/v2.0.1",
                    "headers": {
                        "Accept": "application/json",
                        "Content-Type": "application/json"
                    }
                }
            }
        }
    },
    "data": {},
    "suites": [
        {
            "name": "EasyIOT Full Suite",
            "tests": [
                {
                	"name": "can create a User",
                	"description": "create a User",
                    "api_calls": [
                        {
                        	"request": "POST /users",
                            "params": {
                                "email": "myemail+{{$run_id}}@domain.tld",
                                "firstName": "My FirstName",
                                "lastName": "My LastName"
                            },
                            "assert": [],
                            "save": {
                                "saved.key": "body.token.key",
                                "saved.secret": "body.token.secret",
                                "saved.user_id": "body.user.data.id"
                            },
                            "status": "201"
                        }
                    ]
                },
                {
                	"name": "can create a simple Token for that User",
                    "description": "create a simple Token",
                    "api_calls": [
                        {
                        	"request": "POST /users/me/token",
                            "params": {
                                "key": "{{saved.key}}",
                                "secret": "{{saved.secret}}"
                            },
                            "save": {
                                "saved.tokenKS": "body.token.token"
                            },
                            "status": "201"
                        }
                    ]
                },
                {
                	"name": "can update a User",
                    "description": "update a User",
                    "api_calls": [
                        {
                        	"request": "PUT /users/{{saved.user_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "params": {
                                "email": "myemail+{{$run_id}}@domain.tld",
                                "firstName": "My Updated FirstName",
                                "lastName": "My Updated LastName"
                            },
                            "status": "200"
                        }
                    ]
                },
                {
                	"name": "can create an Object",
                    "description": "create an Object",
                    "api_calls": [
                        {
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "request": "POST /objects",
                            "params": {
                                "description": "My object description",
                                "ipv4": "127.0.0.1",
                                "ipv6": "2001:0db8:0000:85a3:0000:0000:ac1f:8001",
                                "name": "My Object",
                                "position": "LivingRoom",
                                "type": "phone",
                                "user_id": "{{saved.user_id}}"
                            },
                            "save": {
                                "saved.object_id": "body.object.data.id"
                            },
                            "status": "201"
                        }
                    ]
                },
                {
                	"name": "can update an Object",
                    "description": "update an Object",
                    "api_calls": [
                        {
                        	"request": "PUT /objects/{{saved.object_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "params": {
                                "description": "My object updated description",
                                "ipv4": "127.0.0.2",
                                "ipv6": "2001:0db8:0000:85a3:0000:0000:ac1f:4008",
                                "name": "My Updated Object",
                                "position": "BedRoom",
                                "type": "smartphone",
                                "user_id": "{{saved.user_id}}"
                            },
                            "save": {},
                            "status": "200"
                        }
                    ]
                },
                {
                	"name": "can get an Object",
                    "description": "get an Object",
                    "api_calls": [
                        {
                        	"request": "GET /objects/{{saved.object_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "save": {},
                            "status": "200"
                        }
                    ]
                },
                {
                	"name": "can get all my Objects",
                    "description": "get all my Objects",
                    "api_calls": [
                        {
                        	"request": "GET /objects/",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "save": {},
                            "status": "200"
                        }
                    ]
                },
                {
                	"name": "can create a Flow for that User",
                    "description": "create a Flow for that User",
                    "api_calls": [
                        {
                        	"request": "POST /flows",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "params": {
                                "name": "My Flow Name",
                                "objects": [
                                    "{{saved.object_id}}",
                                    "1"
                                ],
                                "permission": "644",
                                "unit": "String"
                            },
                            "save": {
                                "saved.flow_id": "body.flow.data.id"
                            },
                            "status": "201"
                        }
                    ]
                },
                {
                	"name": "can create a Token with permission to Flow",
                    "description": "create a Token with permission to Flow",
                    "api_calls": [
                        {
                        	"request": "POST /users/me/token",
                            "params": {
                                "key": "{{saved.key}}",
                                "secret": "{{saved.secret}}",
                                "permissions":[ {"flow_id": "{{saved.flow_id}}", "permission": "644"} ]
                            },
                            "save": {
                                "saved.bearer": "body.token.token"
                            },
                            "status": "201"
                        }
                    ]
                },
                {
                	"name": "can update a Flow",
                    "description": "update a Flow",
                    "api_calls": [
                        {
                        	"request": "PUT /flows",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "params": {
                                "data_type": "",
                                "name": "My Flow Name UPDATED",
                                "objects": [
                                    "{{saved.object_id}}"
                                ],
                                "permission": "644",
                                "unit": "Boolean"
                            },
                            "save": {},
                            "status": 404
                        }
                    ]
                },
                {
                	"name": "can publish data to Flow",
                    "description": "publish data to Flow",
                    "api_calls": [
                        {
                        	"request": "POST /data",
                            "headers": {
                                "Authorization": "Bearer {{saved.bearer}}"
                            },
                            "params": {
                                "flow_id": "{{saved.flow_id}}",
                                "mqtt_topic": "couleurs/test",
                                "publish": "true",
                                "save": "true",
                                "timestamp": "",
                                "unit": "-",
                                "value": "true"
                            },
                            "save": {},
                            "status": "200"
                        }
                    ]
                },
                {
                	"name": "can get All Objects",
                    "description": "get All Objects",
                    "api_calls": [
                        {
                        	"request": "GET /objects",
                            "headers": {
                                "Authorization": "Bearer {{saved.bearer}}"
                            },
                            "status": 200,
                            "assert": {
        	                    "select": "body.data",
        	                    "size": 1
        	                },
                            "save": {}
                        }
                    ]
                },
                {
                	"name": "can delete a Flow",
                    "description": "delete a Flow",
                    "api_calls": [
                        {
                        	"request": "DELETE /flows",
                            "headers": {
                                "Authorization": "Bearer {{saved.bearer}}"
                            },
                            "save": {},
                            "status": 404
                        }
                    ]
                },
                {
                	"name": "can delete an Object",
                    "description": "delete an Object",
                    "api_calls": [
                        {
                        	"request": "DELETE /objects/{{saved.object_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "save": {},
                            "status": 200
                        }
                    ]
                },
                {
                	"name": "can verify a User",
                    "description": "verify a User",
                    "api_calls": [
                        {
                        	"request": "GET /users/{{saved.user_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "save": {},
                            "status": 200
                        }
                    ]
                },
                {
                	"name": "can delete a User",
                    "description": "delete a User",
                    "api_calls": [
                        {
                        	"request": "DELETE /users/{{saved.user_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "save": {},
                            "status": 200
                        }
                    ]
                },
                {
                	"name": "can verify a User has been deleted",
                    "description": "verify a User has been deleted",
                    "api_calls": [
                        {
                        	"request": "GET /users/{{saved.user_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.tokenKS}}"
                            },
                            "save": {},
                            "status": 404
                        }
                    ]
                }
            ]
        },
        {
            "name": "EasyIOT Open Suite (no Authentification required)",
            "tests": [
                {
                	"name": "can get all DataTypes",
                	"description": "get all DataTypes",
                    "api_calls": [
                        {
                        	"request": "GET /datatypes",
                            "status": 200,
                            "assert": {
        	                    "select": "body.data",
        	                    "size": 8
        	                }
                        }
                    ]
                },
                {
                	"name": "can get all Units",
                	"description": "get all Units",
                    "api_calls": [
                        {
                        	"request": "GET /units",
                            "status": 200,
                            "assert": {
        	                    "select": "body.data",
        	                    "size": 49
        	                }
                        }
                    ]
                },
                {
                	"name": "can get EasyIOT server status",
                	"description": "get EasyIOT server status",
                    "api_calls": [
                        {
                        	"request": "GET /status",
                            "status": 200,
                            "assert": {
                            	"select": "body.status",
                            	"equal": "running"
        	                }
                        }
                    ]
                }
            ]
        }
    ]
}