doctype html
html(lang='en')
  include ../includes/head.jade
  body
    include ../includes/navbar.jade

    .container-fluid
      .row.side-body.hidden-xs
        .col-sm-12
          h2.fa.fa-2x.fa-cubes &nbsp;Objects from your library
        blockquote.fa.fa-comment  Objects are virtual items dedicated to push data to flows. Objects are defined for each Users.

      .row.side-body
        .col-sm-12
          if (objects.length)
            include ../includes/pagination.jade
            .hidden-xs.table-header
              span.col-sm-6
                strong Name/Description/Id
              span.col-sm-2
                strong Position
              span.col-sm-2
                strong Localisation/Visibility
              span.col-sm-2
                strong Created/Updated
            
            .list-group
            - for(object in objects) {
              include ./item_list.jade
            - }
            include ../includes/pagination.jade
          else
            p &nbsp;
            div.alert.alert-warning You don't have any Object yet in your library. You can <a href="/objects/add">add an Object</a>.
          p &nbsp;

    include ../includes/foot.jade