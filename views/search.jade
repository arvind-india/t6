doctype html
html(lang='en')
  include ./includes/head.jade
  body
    include ./includes/navbar.jade
    
    .container-fluid
      .row.side-body
        .col-sm-12
        - if (q)
            h2.fa.fa-2x.fa-search  Search Results for "#{q}"
        - else
            h2.fa.fa-2x.fa-search  Search Results

    .container-fluid
      .row.side-body
        div
          h3 Search Results
          ul
            li
              a(href="#objects") #{objects.length} Objects
            li
              a(href="#flows") #{flows.length} Flows

    .container-fluid#objects
      .row.side-body
        h3 #{objects.length} Objects found
        .list-group
        - if (objects.length)
          - for(object in objects) {
            include ./includes/object_item_list.jade
          - }
        - else
            .list-group-item
              .alert.alert-danger.alert-dismissible(role='alert')
                p No Result in Objects

    .container-fluid#flows
      .row.side-body
        h3 #{flows.length} Flows found
        .list-group
        - if (flows.length)
          - for(flow in flows) {
            include ./includes/flow_item_list.jade
          - }
        - else
            .list-group-item
              .alert.alert-danger.alert-dismissible(role='alert')
                p No Result in Flows

    include ./includes/foot.jade

