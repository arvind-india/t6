a.clearfix.list-group-item(name='#{snippets[snippet].id}', href='/snippets/#{snippets[snippet].id}', target='_blank')
  div.col-sm-6
    h4.list-group-item-heading(style="margin:0; padding:0;")
      span.fa(class="#{snippets[snippet].icon}")  #{snippets[snippet].name}
  div.col-sm-12
    div.fa.fa-external-link.pull-right 

  div.col-sm-6
    img.img-responsive(src="/img/snippet-#{snippets[snippet].type}.jpg", width="70")
  div.col-sm-4 #{snippets[snippet].color}
  div.col-sm-4 #{snippets[snippet].flows.length} Flow(s) linked

  div.col-sm-12
  div.col-sm-2.ellipsis.label.label-default #{snippets[snippet].id}