    style.
      body { margin: 0; }
      h4#title#{rnd} { color: #{snippet.color}; margin:0; padding:0; }
    link(href='/css/font-awesome/font-awesome.min-4.7.0.css', rel='stylesheet')
- if ( currentUrl.indexOf("snippets") > -1 ) {
    body
      //include ../includes/navbar-minimal.jade
