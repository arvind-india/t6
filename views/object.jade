doctype html
html(lang='en')
  include ./includes/head.jade
  body
    include ./includes/navbar.jade
    .container
      .starter-template
        h2 Object&nbsp;
          strong #{object.name}

    .container
      .col-sm-8
        h3 Object details
        div
          .media
            .media-body
              h4.media-heading
                span.glyphicon.glyphicon-minus     Object Name:
                small
                  div     #{object.name}

          .media
            .media-body
              h4.media-heading
                span.glyphicon.glyphicon-minus     Description:
                small
                  div     #{object.description}

          .media
            .media-body
              h4.media-heading
                span.glyphicon.glyphicon-minus     Type:
                small
                  div.label.label-default     #{object.type}

          .media
            .media-body
              h4.media-heading
                span.glyphicon.glyphicon-minus     Position/Location:
                small
                  div.label.label-primary     #{object.position}

          .media
            .media-body
              h4.media-heading
                span.glyphicon.glyphicon-minus     Ip:
                small
                  div.label.label-danger     #{object.ipv4} 
                  -if (object.ipv6)
                    | &nbsp;
                    div.label.label-danger     #{object.ipv6} 
                  -end

      .col-sm-4
        div.sidebar-module-inset
          h3 Contextual Links
          div.col-sm-
            a.btn.btn-primary.btn-sm.pull-right(href='./#{object.id}/edit')
              span.glyphicon.glyphicon-pencil  Edit
              
          div.col-sm-
            a.btn.btn-danger.btn-sm.pull-right(href='./#{object.id}/remove', onclick="if(confirm('Are you sure to remove #{object.name} ?')) {return true;}; return false;")
              span.glyphicon.glyphicon-remove  Remove

          div.col-sm-
            a(href="#") Other '#{object.type}' Objects
          
          div.col-sm-
            a(href="#") Objects in the same location '#{object.position}' 
        p &nbsp; 

    include ./includes/foot.jade

