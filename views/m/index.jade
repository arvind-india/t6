          .md-primary.md-subheader._md.md-altTheme-theme(role='heading', aria-level='2')
            .md-subheader-inner
              .mdl-subheader-content
                span.ng-scope My Profile
          .page-content
              

        //- View Settings
        section#settings.mdl-tabs__panel.mdl-layout__tab-panel
          .md-primary.md-subheader._md.md-altTheme-theme(role='heading', aria-level='2')
            .md-subheader-inner
              .mdl-subheader-content
                span.ng-scope Settings
          .page-content

