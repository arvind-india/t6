              i.material-icons language
            .mdl-button--fab_flinger-options
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons add
              div.mdl-tooltip.mdl-tooltip--left(for="button_flow_create") Create a Flow
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_copy
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_paste


        //- View Flow
        section#flow.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content 

        //- List Snippets
        section#snippets.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content
          
          //- Actions
          #fab_ctn.mdl-button--fab_flinger-container
            button#fab_btn.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored
              i.material-icons language
            .mdl-button--fab_flinger-options
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons add
              div.mdl-tooltip.mdl-tooltip--left(for="button_snippet_create") Create a Snippet
