              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_paste

        //- View Snippet
        section#snippet.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content 
            
        //- List Dashboards
        section#dashboards.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content 
          
          //- Actions
          #fab_ctn.mdl-button--fab_flinger-container
            button#fab_btn.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored
              i.material-icons language
            .mdl-button--fab_flinger-options
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons add
              div.mdl-tooltip.mdl-tooltip--left(for="button_dashboard_create") Create a Dashboard
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_copy
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_paste

        //- View Dashboard
        section#dashboard.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content 

        //- List Rules
        section#rules.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content 
          
          //- Actions
          #fab_ctn.mdl-button--fab_flinger-container
            button#fab_btn.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored
              i.material-icons language
            .mdl-button--fab_flinger-options
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons add
              div.mdl-tooltip.mdl-tooltip--left(for="button_rule_create") Create a Rule
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_copy
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect
                i.material-icons content_paste


        //- List Mqtt
        section#mqtts.mdl-tabs__panel.mdl-layout__tab-panel
          .page-content 


        //- View Sign In
        section#loginForm.mdl-tabs__panel.mdl-layout__tab-panel.mdl-grid.mdl-cell--12-col
          .page-content
            section.content-grid.mdl-grid
              .mdl-card.mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp
                .mdl-card__title.mdl-color--primary.mdl-color-text--white
                  h2.mdl-card__title-text Log in to t6
                .mdl-card__supporting-text
                  form(action='#formPost')
                    .mdl-textfield.mdl-js-textfield
                      input#username.mdl-textfield__input(type='text')
                      label.mdl-textfield__label(for='username') Username
                    .mdl-textfield.mdl-js-textfield
                      input#userpass.mdl-textfield__input(type='text')
                      label.mdl-textfield__label(for='userpass') Password
                .mdl-card__actions.mdl-card--border
                  a#signup_button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href='#signup')
                    i.material-icons person_add
                    | Sign-Up
                  a#signup_button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
                    i.material-icons person
                    | Log in
              

        //- View Sign Up
        section#signup.mdl-tabs__panel.mdl-layout__tab-panel.mdl-grid.mdl-cell--12-col
          .page-content
            section.content-grid.mdl-grid
              .mdl-card.mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp
                .mdl-card__title.mdl-color--primary.mdl-color-text--white
                  h2.mdl-card__title-text Sign-Up to t6
                .mdl-card__supporting-text
                  form(action='#formPost')
                    .mdl-textfield.mdl-js-textfield
