doctype html
html(lang='en')
  include ../includes/head.jade
  body
    include ../includes/navbar.jade
    
    .container-fluid
      .row.side-body.hidden
        .col-sm-12
          h2.fa.fa-2x.fa-users  User Accounts
          if (message && message.type && message.value)
            div.alert(class='alert-#{message.type}', role='alert') #{message.value} 

      .row.side-body
        div
          ul.clearfix.pagination
            li.no-padding.active
              span.fa.fa-2x.fa-users(style='border-bottom-left-radius:0;border-bottom-right-radius:0;')  #{users_length} Users
            li.no-padding
              a.fa-2x.btn.btn-success(href="/account/register", data-toggle='tooltip', data-placement='right	', title='Add a User')
                span.fa.fa-plus

      .row.side-body
        .col-sm-12
          if (users.length)
            include ../includes/pagination.jade
            include ./item_header.jade
            .list-group
              - for(user in users) {
                include ./item_list.jade
              - }
            include ../includes/pagination.jade
          else
            p &nbsp;
            div.alert.alert-warning You don't have any User. Please be patient.

    include ../includes/foot.jade