doctype html
html(lang='en')
  include ./includes/head.jade
  body
    include ./includes/navbar-on-top.jade

    div(style='background:url(/img/opl_img2.jpg) no-repeat scroll 0 100%')
      .container
        .row.starter-template
          .col-sm-10.col-md-4.col-md-offset-4
            h2.text-center.login-title Get instructions to reset your password
      
            .account-wall
              form.form-signin(method="post", action="/account/forgot-password")
                if (message && message.type && message.value)
                  div.alert(class='alert-#{message.type}', role='alert') #{message.value}
                div.alert.alert-warning Enter your Email address below and we'll send you password reset instructions.
      
                label.sr-only(for='email') Email Address
                input#mail.form-control(name='email', type='email', placeholder='Email', required='', autofocus='')

                br/
                button.btn.btn-lg.btn-primary.btn-block(type='submit')
                  i.fa.fa-sign-in &nbsp;Get instructions
              
                span.clearfix
              a.text-center.new-account(href='/account/login') Sign-in
              a.text-center.new-account(href='/account/register') Sign-up
      
      .container &nbsp;
      .container &nbsp;
      .container &nbsp;

    include ./includes/foot.jade