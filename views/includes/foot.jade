footer.footer.navbar-fixed-bottom
  .visible-xs-block
    .btn-group.btn-group-justified
      - if (user)
        -if ( currentUrl === '/objects' || currentUrl === '/objects/' )
          a.btn-group.btn(href='/objects/add')
            i.fa.fa-2x.fa-plus-square(title='Add an Object to my library')  
        -else
          a.btn-group.btn(href='/objects')
            i.fa.fa-2x.fa-cubes(data-toggle='tooltip', data-placement='top', title='My Objects in library')  
        
        -if ( currentUrl === '/flows' || currentUrl === '/flows/' )
          a.btn-group.btn(href='/flows/add')
            i.fa.fa-2x.fa-plus-square(data-toggle='tooltip', data-placement='top', title='Add a Flow to my library')  
        -else
          a.btn-group.btn(href='/flows')
            i.fa.fa-2x.fa-random(data-toggle='tooltip', data-placement='top', title='My Flows in library')  

        -if ( currentUrl === '/snippets' || currentUrl === '/snippets/' )
          a.btn-group.btn(href='/snippets/add')
            i.fa.fa-2x.fa-plus-square(data-toggle='tooltip', data-placement='top', title='Add a Snippet to my library')  
        -else
          a.btn-group.btn(href='/snippets')
            i.fa.fa-2x.fa-puzzle-piece(data-toggle='tooltip', data-placement='top', title='My Snippets in library')  

        -if ( currentUrl === '/dashboards' || currentUrl === '/dashboards/' )
          a.btn-group.btn(href='/dashboards/add')
            i.fa.fa-2x.fa-plus-square(data-toggle='tooltip', data-placement='top', title='Add a Dashboard to my library')  
        -else
          a.btn-group.btn(href='/dashboards')
            i.fa.fa-2x.fa-area-chart(data-toggle='tooltip', data-placement='top', title='My Dashboards in library')  

        a.btn-group.btn(href='/account/profile')
          i.fa.fa-2x.fa-user(data-toggle='tooltip', data-placement='top', title='My Profile and Account')  

      - else
        a.btn-group.btn(href='/account/login')
          i.fa.fa-2x.fa-user(data-toggle='tooltip', data-placement='top', title='Sign In')   
            span.center-block Sign In
            
        a.btn-group.btn(href='/account/register')
          i.fa.fa-2x.fa-user-plus(data-toggle='tooltip', data-placement='top', title='Sign Up to create an Account')
            span.center-block Sign Up

  .container.hidden-xs.text-center
    p.text-muted
    | t6 v#{version}

    span &nbsp;&ndash;&nbsp;
    a(href='/contact') Contact
    span &nbsp;&ndash;&nbsp;
    a(href='/about') About
    span &nbsp;&ndash;&nbsp;
    a(href='/plans') Plans & Prices

script(src='/js/jquery-ui/jquery-ui-1.11.4.min.js')
