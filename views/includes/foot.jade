footer.footer.navbar-fixed-bottom
  .visible-xs-block
    .btn-group.btn-group-justified
      - if (user)
        -if ( currentUrl === '/objects' || currentUrl === '/objects/' )
          a.btn-group.btn(href='/objects/add')
            i.fa.fa-2x.fa-plus-square(title='Add an Object to my shelves')  
        -else
          a.btn-group.btn(href='/objects')
            i.fa.fa-2x.fa-cubes(data-toggle='tooltip', data-placement='top', title='Objects on shelves')  
        
        -if ( currentUrl === '/flows' || currentUrl === '/flows/' )
          a.btn-group.btn(href='/flows/add')
            i.fa.fa-2x.fa-plus-square(data-toggle='tooltip', data-placement='top', title='Add a Flow to my shelves')  
        -else
          a.btn-group.btn(href='/flows')
            i.fa.fa-2x.fa-random(data-toggle='tooltip', data-placement='top', title='Flows on shelves')  

        -if ( currentUrl === '/snippets' || currentUrl === '/snippets/' )
          a.btn-group.btn(href='/snippets/add')
            i.fa.fa-2x.fa-plus-square(data-toggle='tooltip', data-placement='top', title='Add a Snippet to my shelves')  
        -else
          a.btn-group.btn(href='/snippets')
            i.fa.fa-2x.fa-puzzle-piece(data-toggle='tooltip', data-placement='top', title='Snippets on shelves')  

        -if ( currentUrl === '/dashboards' || currentUrl === '/dashboards/' )
          a.btn-group.btn(href='/dashboards/add')
            i.fa.fa-2x.fa-plus-square(data-toggle='tooltip', data-placement='top', title='Add a Dashboard to my shelves')  
        -else
          a.btn-group.btn(href='/dashboards')
            i.fa.fa-2x.fa-area-chart(data-toggle='tooltip', data-placement='top', title='Dashboards on shelves')  

        a.btn-group.btn(href='/account/profile')
          i.fa.fa-2x.fa-user(data-toggle='tooltip', data-placement='top', title='Profile and Account')  

      - else
        a.btn-group.btn(href='/account/login')
          i.fa.fa-2x.fa-user(data-toggle='tooltip', data-placement='top', title='Sign In')   
            span.center-block Sign In
            
        a.btn-group.btn(href='/account/register')
          i.fa.fa-2x.fa-user-plus(data-toggle='tooltip', data-placement='top', title='Sign Up to create an Account')
            span.center-block Sign Up

  .container.hidden-xs.text-center
    p.text-muted
    | t6 v#{version}

    span &nbsp;&ndash;&nbsp;
    a(href='/contact') Contact
    span &nbsp;&ndash;&nbsp;
    a(href='/privacy-policies') Privacy Policies
    span &nbsp;&ndash;&nbsp;
    a(href='/plans') Plans & Prices
